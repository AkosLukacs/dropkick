<?xml version="1.0" encoding="utf-8" ?>
<configuration>
	<log4net>
		<appender name="Console"
							type="log4net.Appender.ColoredConsoleAppender">
			<mapping>
				<level value="ERROR" />
				<foreColor value="Red, HighIntensity" />
			</mapping>
			<mapping>
				<level value="WARN" />
				<foreColor value="Yellow, HighIntensity" />
			</mapping>
			<mapping>
				<level value="INFO" />
				<foreColor value="White" />
			</mapping>
			<mapping>
				<level value="DEBUG" />
				<foreColor value="Green" />
			</mapping>
			<layout type="log4net.Layout.PatternLayout">
				<conversionPattern value="%message%newline" />
			</layout>
		</appender>

        <appender name="TripwireFileAppender" type="log4net.Appender.FileAppender">
            <file value=".\tripwire.log"/>
            <appendToFile value="true"/>
            <layout type="log4net.Layout.PatternLayout">
                <conversionPattern value="%message%newline"/>
            </layout>
        </appender>

        <root>
			<level value="INFO" />
			<appender-ref ref="Console" />
		</root>

        <logger name="dropkick.filewrite">
            <level value="INFO" />
            <appender-ref ref="TripwireFileAppender" />
        </logger>
	</log4net>
</configuration>